<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_chat_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/sound_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_image_chat_item"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@drawable/background_chat_left"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/play_sound_message_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_play_circle"
            app:tint="@android:color/black"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/show_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Title"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>