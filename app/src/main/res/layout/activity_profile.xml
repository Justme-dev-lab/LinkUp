<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbarSize="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profback"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_back"
                android:contentDescription="backbtn"
                android:textSize="20sp" />

            <!-- ← ikon back -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Profile"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile" />

        <!-- Nama & Edit -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/namaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <!-- About -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="About"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutValueText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:hint=""
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/field_gray_rounded"
            android:enabled="false"/>

        <!-- Phone Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Phone Number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneValueText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="16dp"
            android:hint=""
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="@drawable/field_gray_rounded"
            android:enabled="false"/>

        <!-- Email -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailValueTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:text="Email Address"
            android:textColor="@color/black"

            android:background="@drawable/field_gray_rounded">


        </TextView>
        <Button
            android:id="@+id/editprofilebtn"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="25dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/field_gray_rounded"
            android:scrollbarSize="20dp"
            android:text="Edit Profile"
            android:textSize="20sp" />
        <Button
            android:id="@+id/logoutbtn"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="2dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/field_gray_rounded"
            android:scrollbarSize="20dp"
            android:text="Logout"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
